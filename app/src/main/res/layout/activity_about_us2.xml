<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".AboutUsActivity.AboutUs2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="WHAT IS DBCC?"
                android:textSize="40sp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_width="90dp"
                android:layout_height="0.5dp"
                android:background="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:text="INFORMATION ABOUT USERS"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"/>
            <View
                android:layout_width="90dp"
                android:layout_height="0.5dp"
                android:background="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daraga Bible Christian Church, a religious organization located at Zone 4 Busay, 4501 Daraga, Philippines. The church was built on March 5, 1981. The organization holds events such as Sunday Service held every Sunday, a prayer meeting every Wednesday, wedding ceremonies, dedications and fellowships. "
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <View
                            android:layout_width="90dp"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:text="VISION"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="15sp"/>
                        <View
                            android:layout_width="90dp"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="As church blessed by God we envisioned to become Christ-like believers attending a Christ-centered congregation and to be a leading chrurch in mission"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <View
                            android:layout_width="90dp"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:text="MISSION"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="15sp"/>
                        <View
                            android:layout_width="90dp"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="As a church blessed by God, we are committed to exist to glorify God in all our ministries and fulfil the Great Commission through comprehensive and effective evangelism, equipping the believers and sending them in mission so that every community be transformed for Christ."
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </LinearLayout>





            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>